{
  "name": "iobroker.dnscope",
  "version": "0.0.1",
  "description": "DNScope is a Dynamic DNS Updater",
  "author": {
    "name": "simatec",
    "email": "simatec@simateccloud.de"
  },
  "contributors": [
    {
      "name": "simatec"
    }
  ],
  "homepage": "https://github.com/simatec/ioBroker.dnscope",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "DNS",
    "Dynamic DNS",
    "DNS Resover",
    "NoIP",
    "IPv64",
    "DuckDNS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simatec/ioBroker.dnscope.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/eslint-config": "^1.0.0",
    "@iobroker/testing": "^5.0.3",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "mocha": "^11.1.0",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin{,/!(i18n)/**}/flat.txt",
    "lib/",
    "!lib/**/*.{sh,bat,log}",
    "!.dev-server",
    "!.vscode",
    "!.github",
    "!.git",
    "!.DS_Store",
    "!.gitignore",
    "!.gitattributes",
    "!node_modules",
    "!tasks",
    "!.idea",
    "!test",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "translate": "translate-adapter",
    "dev-server-run": "dev-server run dnscope",
    "dev-server-watch": "dev-server watch dnscope",
    "npm": "npm install",
    "lint": "eslint -c eslint.config.mjs ."
  },
  "bugs": {
    "url": "https://github.com/simatec/ioBroker.dnscope/issues"
  },
  "readmeFilename": "README.md"
}

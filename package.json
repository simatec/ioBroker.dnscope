{
  "name": "iobroker.dnscope",
  "version": "0.0.1",
  "description": "DNScope is a Dynamic DNS Updater",
  "author": {
    "name": "simatec",
    "email": "simatec@simateccloud.de"
  },
  "contributors": [
    {
      "name": "simatec"
    }
  ],
  "homepage": "https://github.com/simatec/ioBroker.dnscope",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "DNS",
    "Dynamic DNS",
    "DNS Resover",
    "NoIP",
    "IPv64",
    "DuckDNS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simatec/ioBroker.dnscope.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/eslint-config": "^1.0.0",
    "@iobroker/testing": "^5.0.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "chai-as-promised": "^7.1.2",
    "mocha": "^11.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "!.dev-server",
    "!.vscode",
    "!.github",
    "!.git",
    "!.DS_Store",
    "!.gitignore",
    "!.gitattributes",
    "!node_modules",
    "!tasks",
    "!.idea",
    "!test",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "coverage": "nyc npm run test:ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "translate": "translate-adapter",
    "dev-server-run": "dev-server run dnscope",
    "dev-server-watch": "dev-server watch dnscope",
    "npm": "npm install",
    "lint": "eslint -c eslint.config.mjs ."
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/simatec/ioBroker.dnscope/issues"
  },
  "readmeFilename": "README.md"
}